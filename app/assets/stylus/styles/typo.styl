// styles

body
  font-family body-family

a, h1, h2, h3, h4, h5, h6, p, dl, ol, ul,
blockquote, pre, img, figure, table, tr, th, td, button
  transition transition

  &.intransitive
    transition none !important

// foot margin

p
ul
ol
dl
table
figure
embed
audio
video
canvas
pre
  margin 0 0 1

// figure, figcaption, img

figure
  max-width 100%

  img
    display block

  *
    width 100%
    height auto

figcaption
  border-padding-height f4 2px
  border-padding-top f4 3px
  padding-width f4
  font-line .75 (2/3)
  font-style italic
  border-top 1px solid gray
  color gray

img
  max-width 100%
  height auto

  &.line
    height 1em
    width auto
    position relative
    top (1em / 8)

// u, b, strong, i, em

u, .u
  text-decoration underline

b, .b
strong, .strong
  font-weight bold

i, .i,
em, .em
  font-style italic

// a

a
  text-decoration none
  cursor pointer
  link-color green

  &.red
    link-color red

  &.orange
    link-color orange

  &.yellow
    link-color yellow

  &.green
    link-color green

  &.blue
    link-color blue

  &.purple
    link-color purple

// h1, h2, h3, h4, h5, h6

h1
h2
h3
h4
h5
  font-weight normal
  font-family heading-family

h1
  font-line 3 2.5
  margin 0

h2
  font-line 2.5 2
  margin 1 0 0

h3
  font-line 2.25 2
  margin 1 0 0

h4
  font-line 2 1.5
  margin .5 0 0

h5
  font-line 1.5 1
  margin .5 0 0


h6
  font-weight normal
  text-align center
  text-transform uppercase
  letter-spacing (1em/16)
  font-line .75
  margin 2 0


//

hr
  color = pale
  color-diamond = pale
  size = b8
  shift = size * 2
  border-width 0
  border-bottom 1px solid color
  width 50%
  padding 0
  margin-top f1
  border-margin-bottom f1 1px

  &:before
  &:after
    float left
    position relative
    content ""
    width 0
    height 0
    border-color transparent
    border-width size
    border-style solid


  &:before
    left 50%
    top -(shift)
    margin-left -(size)
    border-bottom-color color-diamond


  &:after
    left 50%
    top 1px
    margin-left -(shift)
    border-top-color color-diamond

// code, kbd, samp, pre

code
kbd
samp
pre
  color = orange
  font-family mono-family
  font-size .9
  background mix(color, white, 15%)
  border-color color
  border-style solid


code
kbd
samp
  border = 1px
  line-height (2/3)
  border-width border 0
  // border-padding-height border f8
  padding-width f4


pre
  border = 2px
  border-width border 0
  // border-padding-height border f2
  padding-width f2


// ol, ul, li

ol
ul
  position relative
  margin-bottom 1.5
  list-style none

  > li
    &:before
      position relative
      float left

  ul
  ol
    margin-bottom 0

ol
  counter-reset li

  > li
    &:before
      content counter(li) "."
      counter-increment li
      font-size .75
      font-style italic
      text-align right
      color blue
      width b1
      top b12
      left -b4
      margin-left -b1

ul
  > li
    &:before
      content ""
      background-color blue
      border-radius b1
      size b4
      top b4 + b6
      left -b6
      margin-left -b3

ol
ul
  &.comma
    margin-bottom f1
    padding-left 0

    > li
      display inline
      margin 0
      padding 0

      &:before
        content ", "
        background-color inherit
        position inherit
        float none
        display inline
        margin 0
        padding 0

      &:first-child
        &:before
          content ""

  &.inline-block
    display inline-block
    margin-bottom 0
    padding-left 0

    > li
      display inline-block

  &.inline
    display inline
    margin-bottom 0
    padding-left 0

    > li
      display inline

  &.flat
    > li
      &:before
        content: none
        display: none

// dl, dt, dd

dl
  > dt
    font-style normal
    font-weight bold

  > dd
    margin-bottom 0

  &.flat
    clearfix()

    > dt
      width 33%
      text-align right
      float left
      padding-right f1
      clear both

    > dd
      width 67%
      float right
      margin-left 0

  &.comma
    clearfix()

    > dt
      display inline-block
      float left
      clear left
      margin-right f8
      text-transform capitalize

      &:after
        content ":"

      & + dd
        &:before
          content none

    > dd
      margin-left 0
      display inline

      &:before
        content ', '

  &.inline-block
    display inline-block
    margin-bottom 0
    padding-left 0

  &.inline
    display inline
    margin-bottom 0
    padding-left 0

// quotes

q
  quotes '\201C' '\201D' '\2018' '\2019' '\201C' '\201D' '\2018' '\2019'
  quote-double()

  q
    quote-single()

    q
      quote-double()

      q
        quote-single()

cite
q[cite]
  font-style italic
  color purple

  &.u
    text-decoration underline
    font-style normal

blockquote
  color = purple
  margin 2 2.5 1.5

  &:before
  &:after
    font-size 5
    color color
    position relative
    line-height 0

  &:before
    content open-quote
    top .25em
    left -.425em
    float left

  &:after
    content no-close-quote

  p
    margin-bottom f2

  cite
    display block
    color color
    border-bottom 0
    text-align right

    &:before
      color color
      content "\2014 \0020"

// sub, sup

sub
sup
  font-size 50%
  line-height 0
  position relative
  padding 0 1px


sub
  vertical-align bottom
  bottom .5em


sup
  vertical-align top
  top 1em

//

small
  font-line .75


// ins, del

ins
del
  color white

ins
  color green
  text-decoration underline


del
  color red
  text-decoration line-through

// s, mark

s
mark
  border = 1px
  font-line .9 (2/3)
  border-width border 0
  border-style solid
  // border-padding-height border f8
  padding-width f4
  text-decoration none


mark
  color = green
  background-color mix(color, white, 15%)
  border-color color


s
  color = red
  background-color mix(color, white, 15%)
  border-color color


// dfn, var, abbr

dfn
var
abbr
abbr[title]
  color = yellow
  border = 1px
  font-line .9 (2/3)
  border-width border 0
  border-style solid
  // border-padding-height border f8
  padding-width f4
  text-decoration none
  font-style normal
  background-color mix(color, white, 15%)
  border-color color

// time, address

address
  display block
  font-style normal

// p

p
  text-align justify

  small
    line-height f2

// .sep

.sep
  color gray
  padding-width f8
